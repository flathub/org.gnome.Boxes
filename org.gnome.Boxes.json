        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbackend-gtk3=enabled",
                "-Dbackend-gtk4=disabled",
                "-Ddocs=false",
                "-Dtests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal",
                    "tag": "0.9.1",
                    "commit": "8f5dc8d192f6e31dafe69e35219e3b707bde71ce",
                    "x-checker-data": {
                        "type": "git",
                        "url": "https://github.com/flatpak/libportal",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "gnome-boxes",
            "buildsystem": "meson",
            "config-opts": [
                "-Dflatpak=true",
                "-Ddistributor_name=gnome-boxes-flathub",
                "-Ddistributor_version=49"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gnome-boxes/49/gnome-boxes-49.0.tar.xz",
                    "sha256": "fa47266da6f5ef7a904c5b8769d4d871bccd4e6b639a363c3235438d7b0e757a",
                    "x-checker-data": {
                        "is-important": true,
                        "type": "gnome",
                        "name": "gnome-boxes"
                    }
                }
            ]
        }
    ]
}
